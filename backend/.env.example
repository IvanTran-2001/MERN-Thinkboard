# MongoDB Connection String
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/thinkboard?retryWrites=true&w=majority

# JWT Secret Key (generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=your_secure_random_64_character_hex_string_here

# Server Port
PORT=5001

# Node Environment (development or production)
NODE_ENV=development

# Upstash Redis Configuration (for rate limiting)
# Get these from: https://console.upstash.com/
UPSTASH_REDIS_REST_URL=https://your-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token_here
